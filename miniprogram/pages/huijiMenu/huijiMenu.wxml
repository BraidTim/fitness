<view class="vmain">
    <view class="flex-wrp" style="flex-direction:row;">
  <view class="leftImage">
    <open-data type="userAvatarUrl" style='width:150rpx;height:150rpx;'></open-data>
    <!--<image src="../../images/userimg.png" style='width:150rpx;height:150rpx;' />-->
  </view>

  <view class="rightText">
    <view class="ti">
      <open-data type="userNickName"></open-data>
    </view>
    <view class="mt5">
      <open-data type="userCity"></open-data>
    </view>
  </view>
</view>

<view class="balance" style="flex-direction:row;" bindtap="scanQRcode">

  <view class="leftIcon">
    <image src="../../images/ico8.png" style='width:50rpx;height:50rpx;' />
  </view>
  <view class="middleText">扫码入场</view>
  <view class="rightGoto">
    <image src="../../images/goto.png" style='width:40rpx;height:40rpx;' />
  </view>

</view>
    <view class="buyHis" bindtap="showBuyHis"style="flex-direction:row;">
  <view class="leftIcon">
    <image src="../../images/ico9.png" style='width:50rpx;height:50rpx;' />
  </view>
  <view class="middleText">会员列表</view>
  <view class="rightGoto">
      <image src="../../images/top.png"  style='width:40rpx;height:40rpx;' />
  </view>
</view>
<view class="buyHisList" style="display:{{dis}}">
          <view class="cur">
                <view class="leftIcon"><image src="../../images/lo1.png" style='width:50rpx;height:50rpx;'/></view>
                <view class="middleText2"><view class="gray9">name1</view></view>
                <view class="rightState">已分享</view>
   
            </view>
            <view class="cur">
                <view class="leftIcon"><image src="../../images/lo2.png" style='width:50rpx;height:50rpx;'/></view>
                <view class="middleText2"><view class="gray9">name2</view></view>
                <view class="rightState">未分享</view>
            </view>
            <view class="cur">
                <view class="leftIcon"><image src="../../images/lo3.png" style='width:50rpx;height:50rpx;'/></view>
                <view class="middleText2"><view class="gray9">name3</view></view>
                <view class="rightState">已分享</view>
            </view>
</view>
</view>
