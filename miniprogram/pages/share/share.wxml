        <radio-group name="radio-group">
          <label><radio value="radio1"/>para1</label>
          <label><radio value="radio2"/>para2</label>
        </radio-group>
      </view> -->
    <view class="btn-area">
        <button class="bt1" form-type="submit" type="primary" disabled="{{shareDisable}}">确认分享</button>
      </view>
    </form>
    <button class="bt1" bindtap="showRecord" type="primary">查看分享记录</button>
  </view>
</view>

